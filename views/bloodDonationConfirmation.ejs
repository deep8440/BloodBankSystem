<div class="content-wrap">
    <h1 class="text-center">Confirmation of Dontaion</h1>
    <div class="login-container">
    <form action="/bloodConfirmation" method="POST" enctype="multipart/form-data">
       <div>
            <input type="hidden" id="bloodbankname" value="<%= appointmentData.bloodbankname %>" name="bloodbankname">
            <input type="hidden" id="username" value="<%= appointmentData.username %>" name="username">
            <input type="hidden" id="appointmentid" value="<%= appointmentData._id %>" name="appointmentid">
            
            <div class="row">
                
                <div class="col-8">
                    <select id="btype" name="btype">
                        <option value="A+">A+</option><option value="A-">A-</option>
                        <option value="B+">B+</option><option value="B-">B-</option>
                        <option value="O+">O+</option><option value="O-">O-</option>
                        <option value="AB+">AB+</option><option value="AB-">AB-</option>
                    </select>
                </div>
            </div>
            
            <input type="submit" value="Submit" class="login">    
            
        </div>
        
        
    </form>
</div>
