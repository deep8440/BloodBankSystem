<%- include('includes/header') %>
<%- include('includes/nav-dashboard') %>

<div class="content-wrap">
	<main>
    <h1>Appointments:</h1>
    <table class="customers">
      <tr>
          <th>User Name</th>
          
          <th>User Email</th>
          
          <th>Appointment date and time</th>
          <th>Status</th>
          <th>Appointment status</th>
          
      </tr>
      <%
      for(bloodbank of appointments)
      {
      %>
          <tr>
              <td><%= bloodbank.username %></td>
              
              <td><%= bloodbank.useremail %></td>
              
              <td><%= bloodbank.bookingdate %></td>
              <td><%= bloodbank.status %></td>
              

              <td><a href="/bloodDonationConfirmation/<%= bloodbank._id %>">Completed</a></td>
              
          </tr>
      <%
      }       
      %>
    </table>
	</main>
</div>
<%- include('includes/footer') %>